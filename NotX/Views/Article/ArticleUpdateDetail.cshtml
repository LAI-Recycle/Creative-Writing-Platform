@{
    ViewBag.Title = "文章";
}

<script src="/Scripts/Article/ArticleUpdateDetail.js" type="text/javascript"></script>

<main aria-labelledby="title">
    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col text-left mb-3">
                        <a type="button" class="btn btn-outline-secondary" href="@Url.Action( "ArticleUpdateDetail", "Article" , new{ ActionType = "back"} )" role="button">返回</a>
                    </div>
                    <!--
                    <div class="form-group row">
                        <div class="col ">
                            <button class="btn btn-outline-secondary" onclick="applyStyle('bold')">粗體(無效)</button>
                            <button class="btn btn-outline-secondary" onclick="applyStyle('italic')">斜體(無效)</button>
                            <button class="btn btn-outline-secondary" onclick="applyStyle('underline')">底線(無效)</button>
                        </div>
                    </div>
                    -->
                </div>
                <form action="/Article/ArticleUpdateDetail" method="post">
                    <input type="hidden" name="Choose_ArticleId" value="@(Model==null?"":Model.ArticleDetail.ArticleId)">
                    <input type="hidden" name="ActionType" value="@(Model==null?"create":"update")">
                    <br />
                    <div class="form-group row">
                        <label for="title">標題：</label>
                        <input type="text" id="Title" name="InputArticle.Title" class="form-control" placeholder="請輸入標題" value="@(Model==null?"":Model.ArticleDetail.Title)" required>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="comments">內容：</label>
                        <textarea id="Content" name="InputArticle.Content" rows="10" class="form-control" placeholder="開始精彩的內容..." required>@(Model==null?"":Model.ArticleDetail.Content)</textarea>
                        <!--
                        <div id="Content" name="InputArticle.Content" class="form-control" contenteditable="true" required style="border: none;">
                            開始精彩的內容...
                        </div>
                        -->
                    </div>
                    <br />
                    <div class="form-group row">
                        <button type="submit" class="btn btn-outline-secondary">發布</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</main>


