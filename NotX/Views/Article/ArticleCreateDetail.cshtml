
<main aria-labelledby="title">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col text-left">
                        <a type="button" class="btn btn-outline-secondary" href="@Url.Action( "ArticleCreateDetail", "Article" , new{ ActionType = "back"} )" role="button">返回</a>
                    </div>
                </div>
                <form action="/Article/ArticleCreateDetail" method="post">
                    <input type="hidden" name="ActionType" value="create">
                    <input type="hidden" name="InputArticle.Author" value="賴彥江">
                    <br />
                    <div class="form-group row">
                        <label for="title">標題：</label>
                        <input type="text" id="Title" name="InputArticle.Title" class="form-control" placeholder="請輸入標題" required>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="comments">內容：</label>
                        <textarea id="Content" name="InputArticle.Content" rows="10" class="form-control" placeholder="開始精彩的內容..." required></textarea>
                    </div>
                    <br />
                    <div class="form-group row">
                        <button type="submit" class="btn btn-outline-secondary">發布</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</main>