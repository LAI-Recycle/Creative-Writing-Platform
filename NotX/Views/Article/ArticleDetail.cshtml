@model NotX.Models.Article.ArticleDetailModel

@{
    ViewBag.Title = "文章";
}

<script src="/Scripts/Article/ArticleDetail.js" type="text/javascript"></script>

<style>
    /* 將分享列固定在畫面底部 */
    .fixed-bottom-bar {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px;
        z-index: 999; /* 確保在最上層 */
    }
</style>

<main aria-labelledby="title">
    <div class="container mb-5">
        @if (Model.ArticleDetail != null)
        {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col text-left">
                        <a type="button" class="btn btn-outline-secondary" href="@Url.Action("ArticleList", "Article" )" role="button">返回</a>
                    </div>
                    <div class="col text-right">
                        <div class="float-end">瀏覽數：@Model.ArticleDetail.ClickNumber</div>
                        <div class="material-symbols-outlined float-end">visibility</div>
                    </div>
                </div>

                <br />
                <h1>@Model.ArticleDetail.Title</h1>
                <div class="row">
                    <div class="col text-left">
                        <h6>@Model.UserData.Name</h6>
                    </div>
                    <div class="col text-end">
                        <h6>@Model.ArticleDetail.CreationTime</h6>
                    </div>
                </div>
                <br />
                <p>@Model.ArticleDetail.Content</p>
                <!-- 您的文章內容 -->
                <br />
                <hr>
                <br />
                <div class="row">
                    <div class="col text-left">
                        <a href="@Url.Action("ArticleDetail", "Article", new { Choose_ArticleId = Model.ArticleDetail.ArticleId-1 ,ActionType="read"})" )">上一篇</a>
                    </div>
                    <div class="col text-end">
                        <a href="@Url.Action("ArticleDetail", "Article", new { Choose_ArticleId = Model.ArticleDetail.ArticleId+1 ,ActionType="read"})" )">下一篇</a>
                    </div>
                </div>
                <br />
                <hr>
                <br />
                <div class="card">
                    <div class="card-body">
                        <h5>作者資料：@Model.UserData.Name</h5>
                        <p>作者簡介：@Model.UserData.Introduction</p>
                    </div>
                </div>
                <br />
                <hr>
                <br />
            </div>
        </div>
        }
    </div>
</main>

<div class="fixed-bottom-bar">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col text-left">
                        <div style="display: flex; align-items: center;">
                            <div>作者：@Model.UserData.Name</div>
                        </div>
                    </div>
                    <div class="col text-end">
                        <a class="btn btn-outline-danger" role="button" href=# )">
                            <div style="display: flex; align-items: center;">
                                <div class="material-symbols-outlined" style="display: inline-block;">bookmark</div>
                                <div style="display: inline-block; margin-left: 5px;">收藏(無效)</div>
                            </div>
                        </a>
                        <button type="button" class="btn btn-outline-danger" onclick="Choose_Cityname_onChange( @Model.ArticleDetail.ArticleId)">
                            <div style="display: flex; align-items: center;">
                                <div class="material-symbols-outlined" style="display: inline-block;">favorite</div>
                                <div style="display: inline-block; margin-left: 5px;">@Model.ArticleDetail.FavoriteNumber</div>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


