@{
    ViewBag.Title = "Sign Up";
}

<main>
    <div class="container mb-5">
        <div class="mb-4 ">
            <h1 class="font-weight-normal mb-3">Sign Up</h1>
        </div>
        <form class="form-signin" action="/Member/SignUp" method="POST">
            <div class="form-row mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="InputSignUpDetail.Account" name="InputSignUpDetail.Account" placeholder="Email" required autofocus>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="text" id="InputSignUpDetail.Password" name="InputSignUpDetail.Password" placeholder="Password" required>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="InputSignUpDetail.Name" name="InputSignUpDetail.Name" placeholder="Name" required>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="phonenumber">PhoneNumber</label>
                <input class="form-control" type="text" id="InputSignUpDetail.PhoneNumber" name="InputSignUpDetail.PhoneNumber" placeholder="PhoneNumber" required>
            </div>

