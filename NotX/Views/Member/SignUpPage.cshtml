<main>
    <div class="container">
        <div class="text-center mb-4 ">
            <h1 class="font-weight-normal mb-3">Sign Up</h1>
        </div>
        <form class="form-signin" action="/Member/SignUp" method="POST">
            <div class="form-row mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" id="email" type="text" name="email" placeholder="Email" required autofocus>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" id="password" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" id="name" type="name" name="name" placeholder="Name" required>
            </div>
            <div class="form-row mb-3">
                <label class="form-label" for="phonenumber">PhoneNumber</label>
                <input class="form-control" id="phonenumber" type="phonenumber" name="phonenumber" placeholder="PhoneNumber" required>
            </div>

            <button class="btn btn-outline-secondary" type="submit">Submit</button>
        </form>

        <div class="mb-4 text-center">
            <p><a href="/Member/LoginPage">ªð¦^</a></p>
        </div>
    </div>
</main>
